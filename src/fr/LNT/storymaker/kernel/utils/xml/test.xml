<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE game SYSTEM "game.dtd">
<game name="Test adventure">
    <script begin="sc-1">
        <script-node id="sc-1">
            <child child-id="sc-2"/>
            <child child-id="sc-4"/>
            <child child-id="sc-3"/>
        </script-node>
        <script-node id="sc-2">
            <child child-id="sc-1"/>
            <child child-id="sc-3"/>
            <child child-id="sc-4"/>
        </script-node>
        <script-node id="sc-3">
            <child child-id="sc-2"/>
            <child child-id="sc-1"/>
        </script-node>
        <script-node id="sc-4">
            <child child-id="sc-1"/>
            <child child-id="sc-2"/>
            <child child-id="sc-3"/>
        </script-node>
    </script>
    <map begin="loc1">
        <location id="loc1">
            <name>Piece 1</name>
            <text>Bienvenue dans la piece 1</text>
            <desc>Une piece nulle</desc>
            <door id="door1" to="loc2"/>
        </location>
        <location id="loc2">
            <name>Piece 2</name>
            <text>Bienvenue dans la piece 2</text>
            <desc>Une piece presque bien</desc>
            <door id="door2" to="loc1" execute="print text 1 / print text 2"/>
        </location>
    </map>
    <items-list>
        <item id="key">
            <name>Clef</name>
            <desc>Une clef</desc>
        </item>
    </items-list>
    <characters-list>
        <character id="Maria" location="loc1" available="sc-1 sc-3">
            <name>Maria</name>
            <desc>Beautiful Maria !</desc>
            <dialog id="mar_dia_2" begin="noanswer1" available="sc-1">
            	<dialog-node id="noanswer1" execute="print text test">
                    <text>Je n'ai rien à dire...</text>
                </dialog-node>
            </dialog>
            <dialog id="mar_dia_1" begin="test1" available="sc-3">
                <dialog-node id="test1">
                    <text>Bonjour, ça va ?</text>
                    <answer redirect="test2">ça va !</answer>
                    <answer redirect="test3">Bah non...</answer>
                </dialog-node>
                <dialog-node id="test2">
                    <text>Cool ! c'est bien ça !</text>
                    <answer redirect="test4">Effectivement</answer>
                    <answer redirect="test3">Bah non...</answer>
                </dialog-node>
                <dialog-node id="test3">
                    <text>Il faut être joyeux dans la vie !</text>
                    <answer redirect="test4">C'est vrai !</answer>
                    <answer redirect="test2">Bah non...</answer>
                </dialog-node>
                <dialog-node id="test4">
                    <text>Bah c'est bien...</text>
                    <answer>Oui...</answer>
                </dialog-node>
            </dialog>
        </character>
    </characters-list>
</game>